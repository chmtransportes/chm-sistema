Options -Indexes

<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Se existir arquivo ou pasta, n√£o mexe
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Tudo o resto vai para index.php
  RewriteRule ^ index.php [QSA,L]
</IfModule>

# PHP settings
<IfModule mod_php.c>
  php_flag display_errors Off
  php_flag log_errors On
</IfModule>
