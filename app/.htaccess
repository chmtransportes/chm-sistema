Options -Indexes
Options +FollowSymLinks

<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Servir apenas arquivos estáticos diretamente
  RewriteCond %{REQUEST_FILENAME} -f
  RewriteCond %{REQUEST_URI} \.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot|webp|json|webmanifest)$ [NC]
  RewriteRule ^ - [L]

  # Todas as outras requisições vão para index.php
  RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>

# Proteção de arquivos sensíveis
<FilesMatch "\.(sql|bak|old|log|ini|env|git|gitignore)$">
  Order Allow,Deny
  Deny from all
</FilesMatch>

# Charset UTF-8
AddDefaultCharset UTF-8

# Compressão GZIP
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Headers de Segurança
<IfModule mod_headers.c>
  Header always set X-Frame-Options "SAMEORIGIN"
  Header always set X-Content-Type-Options "nosniff"
  Header always set X-XSS-Protection "1; mode=block"
</IfModule>
